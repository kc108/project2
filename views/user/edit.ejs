<!DOCTYPE html>
<html lang="en">

  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>
  <body>
    <div id="bg">
     
    <!-- THE HEADER TAG PARTIAL -->
    <%- include("../partials/header") %>
      <section class="hero is-small has-text-centered">
      <div class="hero-body has-text-black">
        <p class="title has-text-dark-danger is-warning">Itenarary for <%= travelplan.location %> </p>
      </div>
    </section>
    <br><br>
  
  <div id="edit-section" class="edit-section">
      <form action="/user/<%= travelplan.id %>?_method=PUT" method="POST" class="new-travelplan-form has-text-centered" id="new-travelplan-form">
    

        <div class="field">
          <label class="label">Enter your Destination</label>
          <input class="input" type="text" placeholder="e.g. Bora Bora" name="location" required value="<%= travelplan.location %>" />
        </div>
    
        <div class="field">
          <label class="label">Day</label>
          <input class="input" type="text" placeholder="Planned Activity" value="<%= travelplan.tripDate %>"required />
        </div>


      <div class="field">
        <label class="label">Subheading/Category</label>
        <input class="input" type="text" placeholder="e.g. Museum, Entertainment, etc." value="<%= travelplan.subHeading %>" />
      </div>

      <div class="field">
        <label class="label">Notes</label>
        <input class="input" type="text" placeholder="" value="<%= travelplan.notes %>">
      </div>

      <div class="field">
        <label class="label">Location</label>
        <input class="input" type="text" placeholder="Address Location" value="<%= travelplan.address %>">
      </div>

      <input class="button is-link" type="submit" name="" value="Update Itenarary" />

    </form>
    <!-- DELETE FORM GOES HERE -->
    <form action="/user/<%= travelplan._id %>?_method=DELETE" class="delete-form" method="POST">
      <input class="button is-link delete-button" type="submit" value="Delete">
    </form>
  </div>
  <br><br>

   </div>
    <!-- THE FOOTER TAG PARTIAL -->
    <%- include("../partials/footer") %>
    </div>
  </body>
</html>