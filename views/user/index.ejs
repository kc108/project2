<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>

  <body>
    <!-- THE HEADER TAG PARTIAL -->
    <%- include("../partials/header") %>

    <main>

      <!-- *********DISPLAY OUR GOALS********* -->
      <div class="right-aligned-logout-button">
      <a href="/auth/logout"><button class="button">Logout</button></a>
      </div>


      <div class="centered-user-index">
      <h1 class="title">My Destination</h1>
      </div>
 <!-- **********NEW TRAVELPLANS FORM**************** -->
 <form action="/user/new" method="post">

  <div class="field">
    <label class="label">Enter your Destination</label>
  <input class="input" type="text" placeholder="e.g. Bora Bora" name="location" required />
  </div>

  <div class="field">
    <label class="label">Date</label>
  <input class="input" type="text" placeholder="Day of Week, Month, Day" name="tripDate" required />
  </div>

  <input type="description" name="subHeading" placeholder="Subheading/Category" />

  <input type="text" name="notes" placeholder="Notes" />

  <input type="text" name="address" placeholder="Address Location" />
  <input type="submit" value="Submit" />
</form>
      
      <% for (const travelplan of travelplans) { %>
      
        <a href="/user/<%= travelplan.id %>/edit">Edit</a>
        <a href="/user/<%= travelplan.id %>">Details</a>
      <h2 class="subtitle is-3"><%= travelplan.location %></h2>
      <h2 class="subtitle is-3"><%= travelplan.tripDate %></h2>
      <% } %>

     


      
    </main>

    <!-- THE HEAD TAG PARTIAL -->
    <%- include("../partials/footer") %>
  </body>
</html>